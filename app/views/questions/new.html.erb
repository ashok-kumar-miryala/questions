<h1>New Question</h1>

<% form_for @question do |f| %>
  <p>
    <%= f.label :question %><br />
    <%= f.text_field :question %>
  </p>
  <% f.fields_for :answers do |builder| %>
    <%= render 'answer_fields', :f => builder %>
  <% end %>
  <p><%= f.submit "Submit" %></p>
<% end %>

<%= link_to 'Back', questions_path %>
